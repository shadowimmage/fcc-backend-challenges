doctype html
html(lang='en')
    head
        title Exercise Tracker
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css' integrity='sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB' crossorigin='anonymous')
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        link(rel='stylesheet' href='/exerciseTracker/css/custom.css')
    body
        div(class='container')
            div(class='row')
                div(class='col-sm')
                    h1 Exercise Tracker
            div(class='row')
                div(class='col-sm form-column')
                    h3 Create a New User
                    p
                        code POST /api/exercise/new-user
                    form(action='/exerciseTracker/api/new-user' method='post')
                        div(class='form-group')
                            label(for='username') Username
                            input(id='username' class='form-control' name='username' placeholder='username' type='text')
                        button(type='submit' class='btn btn-primary btn-block btn-sm') Submit
                div(class='col-sm form-column')
                    h3 Add exercises
                    p
                        code POST /api/exercise/add
                    form(action='/exerciseTracker/api/add' method='post')
                        div(class='form-group')
                            label(for='uid') User ID
                            input(id='uid' class='form-control' name='userId' placeholder='userId*' type='text')
                        div(class='form-group')
                            label(for='desc') Description
                            input(id='desc' class='form-control' name='description' placeholder='description*' type='text')
                        div(class='form-group')
                            label(for='mins') Duration
                            input(id='mins' class='form-control' name='duration' placeholder='duration* (mins)' type='number')
                        div(class='form-group')
                            label(for='date') Date
                            input(id='date' class='form-control' name='date' placeholder='date (yyyy-mm-dd)' type='date')
                        button(type='submit' class='btn btn-primary btn-block btn-sm') Submit
            div(class='row')
                div(class='col-sm')
                    p. 
                        #[strong GET user's exercise log:]
                        #[code GET #{'/api/exercise/log?{userId}[&from][&to][&limit]'}]
                    p. 
                        #[strong { }] = required, #[strong #{'[ ]'} ] = optional
                    p. 
                        #[strong from, to] = dates (yyyy-mm-dd); #[strong limit] = number