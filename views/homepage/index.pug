doctype html
html(lang='en')
    head
        title Free Code Camp Projects Server
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css' integrity='sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB' crossorigin='anonymous')
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        link(rel='stylesheet' href='/homepage/css/custom.css')
        link(rel='apple-touch-icon' sizes='180x180' href='/homepage/img/apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='32x32' href='/homepage/img/favicon-32x32.png')
        link(rel='icon' type='image/png' sizes='16x16' href='/homepage/img/favicon-16x16.png')
        link(rel='manifest' href='/homepage/img/site.webmanifest')
        link(rel='mask-icon' href='/homepage/img/safari-pinned-tab.svg' color='#5bbad5')
        meta(name='msapplication-TileColor' content='#da532c')
        meta(name='theme-color' content='#ffffff')
    body
        header
            div(class='container')
                div(class='row justify-content-center')
                    div(class='col-sm logo-col')
                        img(id='logo' class='img-fluid' src='/homepage/img/logo-plain.svg' alt='Chase Sawyer, site logo')
                    div(class='col-sm')
                        h1 Free Code Camp Projects
                        p(class='lead') Projects completed by #[a(href='https://shadowimmage.github.io') Chase Sawyer]
        div(class='container')
            div(class='row justify-content-center')
                div(class='col-sm')
                    h3 API and Microservice Projects - 
                        a(href='https://www.freecodecamp.org/certification/shadowimmage/apis-and-microservices' target='blank') Certificate
                    ul(class='list-unstyled')
                        li Timestamp Microservice
                            ul
                                li
                                    code #[a(href='/api/timestamp/December%2015,%202015') #{'/api/timestamp/{date}'}]
                                li
                                    code #[a(href='/api/timestamp/1450137600') #{'/api/timestamp/{unix timestamp}'}]
                        li Request Header Parser Microservice
                            ul
                                li
                                    code #[a(href='/api/whoami') #{'/api/whoami'}]
                        li URL Shortener Microservice
                            ul
                                li
                                    code #[a(href='/shortener/new/https://www.google.com') #{'/shortener/new/{URL}'}]
                                li
                                    code #[a(href='/shortener/17') #{'/shortener/{resolve ID}'}]
                        li Image Search Abstraction Layer
                            ul
                                li See page: 
                                    code #[a(href='/api/imagesearch/') #{'/api/imagesearch/'}]
                        li Exercise Tracker
                            ul
                                li See page: 
                                    code #[a(href='/exerciseTracker/') #{'/exerciseTracker'}]
                        li File Metadata Microservice
                            ul
                                li See page:
                                    code #[a(href='/api/filesize/upload') #{'/api/filesize/upload'}]